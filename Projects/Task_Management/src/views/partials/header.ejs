<!-- Tailwind CDN -->
<script src="https://cdn.tailwindcss.com"></script>

<header class="bg-blue-600 text-white px-6 py-4 flex justify-between items-center shadow-md">
  <!-- Logo / App Title -->
  <a href="/" class="text-xl font-bold hover:underline">My App</a>

  <!-- Navigation / User Actions -->
  <% if (locals.user) { %>
    <div class="flex items-center space-x-4">
      <span class="hidden sm:inline">Welcome, <%= user.username %> ðŸ‘‹</span>

      <!-- Dashboard or Todos link -->
      <a href="/task" class="bg-white text-blue-600 px-3 py-1 rounded hover:bg-gray-100 transition">
        Todos
      </a>

      <!-- Logout form -->
      <form action="/users/logout" method="DELETE">
        <button type="submit" class="bg-white text-blue-600 px-3 py-1 rounded hover:bg-gray-100 transition">
          Logout
        </button>
      </form>
    </div>
    <% } else { %>
      <div class="flex items-center space-x-4">
        <a href="/users/login" class="hover:underline">Login</a>
        <a href="/users/register" class="hover:underline">Register</a>
      </div>
      <% } %>
</header>